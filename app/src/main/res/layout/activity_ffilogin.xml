    <RelativeLayout
        android:layout_width="300sp"
        android:layout_height="350sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="86sp"
        android:background="@drawable/ffiloginbackground">

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="260sp"
            android:layout_height="40sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="63sp"
            android:background="@drawable/ffiedittext"
            android:drawableLeft="@drawable/ic_action_ffiuser"
            android:ems="10"
            android:hint="Email"
            android:cursorVisible="false"
            android:inputType="textPersonName"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/editPassword"
            android:layout_width="260sp"
            android:layout_height="40sp"
            android:cursorVisible="false"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="123sp"
            android:background="@drawable/ffiedittext"
            android:drawableLeft="@drawable/ic_action_pass"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPersonName"
            android:textColor="#000000" />


        <Button
            android:id="@+id/Login"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="98sp"
            android:background="@drawable/ffibuttonshape"
            android:text="LOGIN"
            android:textColor="#000000" />



