    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="380sp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:background="@drawable/usergradient">

        <EditText
            android:id="@+id/editName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="33sp"
            android:layout_marginTop="24sp"
            android:ems="10"
            android:hint="Enter Full Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/editName"
            android:layout_marginTop="101sp"
            android:ems="10"
            android:hint="Enter your phone number here"
            android:inputType="phone" />


        <Spinner
            android:id="@+id/Occupation"
            android:layout_width="220sp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/editName"
            android:layout_centerVertical="true"
            android:entries="@array/occupation" />

        <EditText
            android:id="@+id/interest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/editName"
            android:layout_marginBottom="102sp"
            android:ems="10"
            android:hint="Write about your interest"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/sendTo"
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="22sp"
            android:background="@drawable/buttonshape"
            android:text="Submit Details" />


    </RelativeLayout>
