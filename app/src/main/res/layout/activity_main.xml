<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ffigradient"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/postQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="188dp"
        android:ems="10"
        android:hint="Post a question"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/postAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="49dp"
        android:layout_marginStart="40dp"
        android:ems="10"

        android:inputType="textPersonName"
        android:text="Please wait for the answer" />

    <Button
        android:id="@+id/questionPost"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:padding="7sp"
        android:textColor="#000000"
        android:background="@drawable/ffibuttonshape"
        android:layout_below="@id/postQuestion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25sp"
        android:text="Post" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="120sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38sp"
        app:srcCompat="@drawable/lofoff1" />

</RelativeLayout>